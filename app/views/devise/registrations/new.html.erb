<!-- app/views/devise/registrations/new.html.erb -->
<div class="household-show">
  <h1>Sign Up</h1>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
    <div class="field">
      <%= f.input :email, as: :email, autofocus: true, autocomplete: "email", label: "Email" %>
    </div>

    <div class="field">
      <%= f.input :username, autofocus: true, autocomplete: "username", label: "Username" %>
    </div>

    <div class="field">
      <%= f.input :password, as: :password, autocomplete: "new-password", label: "Password" %>
    </div>

    <div class="field">
      <%= f.input :password_confirmation, as: :password, autocomplete: "new-password", label: "Password Confirmation" %>
    </div>

    <!-- Add a file upload field for the profile photo -->
    <div class="field">
      <%= f.input :photo, as: :file, label: "Profile Photo" %>
    </div>

    <div class="actions">
      <%= f.button :submit, "Sign up", class: "btn btn-warning" %>
    </div>
  <% end %>
  <p>______</p>

<%= render "devise/shared/links" %>
</div>
